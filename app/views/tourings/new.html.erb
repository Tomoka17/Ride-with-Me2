<style>

.main{
  width: 80%;
  padding: 10px;
}    
.mb-3{
  width: 50%;
  margin-left: 15px;
  align-items: center;
}
.select-box{
  width: 50%;
}
</style>

  <div class="main">
    <h1>ツーリング記録</h1>
      <%= form_with(model: @touring, local: true) do |f| %>
      <%#= render "devise/shared/error_messages", resource: resource %>
        <div class="mt-3 mb-3">
          <div class="field">
            <%= f.label :image, class:"form-label" %><button type="button" class="btn btn-outline-info btn-sm m-1">Must</button><br />
            <%= f.file_field :image, id:"touring-image" %>
          </div>
        </div>
        <div class="mb-3">
          <%= f.label :title, class:"form-label" %><button type="button" class="btn btn-outline-info btn-sm m-1">Must</button><br />
          <%= f.text_area :title, class:"form-control", id:"touring-title", placeholder:"タイトル（40文字まで)", maxlength:"40" %>
        </div>
        <div class="mb-3">
          <%= f.label :weather, class:"form-label" %><button type="button" class="btn btn-outline-info btn-sm m-1">Must</button><br />
          <%= f.collection_select(:weather_id, Weather.all, :id, :name, {include_blank: ''}, {class:"select-box"}) %>
        </div>
        <div class="mb-3">
          <%= f.label :mileage, class:"form-label" %><button type="button" class="btn btn-outline-info btn-sm m-1">Must</button><br />
          <%= f.text_area :mileage, class:"form-control", id:"touring-mileage", placeholder:"総走行距離" %>
        </div>
        <div class="mb-3">
          <%= f.label :record, class:"form-label" %><button type="button" class="btn btn-outline-info btn-sm m-1">Must</button><br />
          <%= f.text_area :recording, class:"form-control", id:"touring-recording", placeholder:"ツーリング中の思い出（1000文字まで)", maxlength:"1000" %>
        </div>
        <div class="mb-3">
                <%= f.submit "POST", class:"btn btn-info"%>
              </div>
      <% end %>
    </div>